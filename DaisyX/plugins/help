from collections import OrderedDict

from DaisyX.functions import edit, extract_args, get_translation, reply, sedenify


@daisy(pattern='^.help')
def sed(message):
    sed = extract_args(message).lower()
    cmds = OrderedDict(sorted(HELP.items()))
    if len(seden) > 0:
        if sed in cmds:
            edit(message, str(cmds[sed]))
        else:
            edit(message, f'**{get_translation("sedenUsage")}**')
    else:
        edit(message, get_translation('sedenUsage2', ['**', '`']))
        metin = f'{get_translation("sedenShowLoadedModules", ["**", "`", len(cmds)])}\n'
        for item in cmds:
            metin += f'â€¢ `{item}`\n'
        reply(message, metin)
